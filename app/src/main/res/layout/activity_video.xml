<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="ru.spbstu.videomood.VideoActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <VideoView android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true">
    </VideoView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/black_overlay">

        <TextView
            android:text="@string/init_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alpha"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:text="@string/init_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/beta"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="@string/init_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gamma"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="@string/init_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/delta"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="@string/init_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/theta"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="=)"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mood"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_overlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="UNKNOWN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/battery"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="3"/>

        <TextView
            android:text="0%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/museState"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/goodIndicators">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/forehead"
                android:gravity="center"
                android:background="@android:color/white"
                android:layout_above="@+id/good2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_margin="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/good1"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/holo_red_light" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/good2"
                android:gravity="center"
                android:background="@android:color/holo_green_light"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/good4"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/good4"
                android:gravity="center"
                android:background="@android:color/holo_orange_dark"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/good3"
                android:gravity="center"
                android:background="@android:color/holo_blue_light"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_above="@+id/good4" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
