<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="commonButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="accentButton">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="videoButton" parent="commonButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="videoButtonPlay" parent="videoButton">
        <item name="android:textSize">80sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="selectVideoButton" parent="commonButton">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="sideBlock">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="text">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="sideBlockText" parent="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="sideBlockText.Danger">
        <item name="android:textColor">#d7452e</item>
    </style>
    <style name="sideBlockText.Warning">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="sideBlockText.Ok">
        <item name="android:textColor">#1267e7</item>
    </style>
    <style name="header" parent="text">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="subheader" parent="text">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="sideBlockHeader" parent="text">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="sideIcon">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="cardLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="cardValue">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
