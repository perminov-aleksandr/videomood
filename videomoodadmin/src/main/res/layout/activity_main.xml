<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="ru.spbstu.videomoodadmin.activities.MainActivity"
    android:padding="8dp"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/main">

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/plotView"
            android:layout_weight="1"
            android:padding="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/videoInfo">

            <Button
                android:text="@string/videoNotPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/videoName"
                android:gravity="center"
                android:padding="8dp"
                android:onClick="selectVideo" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_below="@+id/videoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="60"
                android:max="100" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar"
                android:id="@+id/videoControl"
                android:gravity="center">

                <Button
                    style="@style/videoButton"
                    android:text="@string/fa_previous"
                    android:id="@+id/prevBtn"
                    android:textAlignment="gravity"
                    android:onClick="prev" />

                <Button
                    style="@style/videoButton"
                    android:text="@string/fa_play"
                    android:id="@+id/playBtn"
                    android:textAlignment="gravity"
                    android:onClick="pause" />

                <Button
                    style="@style/videoButton"
                    android:text="@string/fa_next"
                    android:id="@+id/nextBtn"
                    android:textAlignment="gravity"
                    android:onClick="next" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/info"
        android:layout_weight="3"
        android:weightSum="1">

        <TextView
            android:text="@string/fa_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            android:gravity="center"
            android:textSize="96sp"
            android:textAlignment="gravity"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connectionStatusLabel"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="@string/state_not_connected"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/headsetInfo"
            android:visibility="visible">

            <TextView
                android:text="@string/headset_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/headsetState"
                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:text="@string/defaultPercentFormatString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/headsetBattery"
                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="@string/muse_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/museState"
                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:text="@string/defaultPercentFormatString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/museBattery"
                android:textAlignment="gravity"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
